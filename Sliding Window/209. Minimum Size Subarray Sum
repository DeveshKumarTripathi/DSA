class Solution {
    public int minSubArrayLen(int target, int[] arr) {
        int n = arr.length;
        int left = 0;
        int right = 0;
        int currSum = 0;
        int min = Integer.MAX_VALUE;
        while(right<n){
            currSum += arr[right];
            while(currSum >= target){
                min = Math.min(min,right-left+1);
                currSum -= arr[left];
                left++;
            }
            right++;
        }
        if(min == Integer.MAX_VALUE)return 0;
        else return min;
    }
}
