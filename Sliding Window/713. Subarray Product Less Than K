class Solution {
    public int numSubarrayProductLessThanK(int[] nums, int k) {
        int n = nums.length;
        int l = 0;
        int count= 0;
        int prod = 1;
        for(int r = 0; r < n; r++){
            prod = prod*nums[r];
            while(prod >= k&& l<=r){
                prod = prod/nums[l];
                l++;
            }
            count += r-l+1;
        }
        return count;
    }
}
