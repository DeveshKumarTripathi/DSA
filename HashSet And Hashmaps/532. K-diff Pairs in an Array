class Solution {
    public int findPairs(int[] arr, int k) {
        if(k < 0) return 0;
        HashMap<Integer,Integer> map = new HashMap<>();
        for(int i : arr){
            map.put(i,map.getOrDefault(i,0)+1);
        }
        int count = 0;

        if(k==0){
            for(int key : map.keySet()){
                if(map.get(key) >= 2) count++;
            }
        }else{
            for(int key : map.keySet()){
                if(map.containsKey(key+k)) count++;
            }
        }
        return count;
    }
}
