// Recursive Method


class Solution {
    public List<List<Integer>> generate(int n) {
        List<List<Integer>> res = new ArrayList<>();
        List<Integer> list = new ArrayList<>();

        if(n == 1) {
            list.add(1);
            res.add(list);
            return res;
        }
        List<List<Integer>> out = generate(n - 1);
        List<Integer> in = out.get(out.size() - 1);
        list.add(1);
        for(int i = 0; i < in.size() - 1; i++){
            list.add(in.get(i) + in.get(i+1));
        }
        list.add(1);
        out.add(list);
        return out;
    }
}
