class Solution {
    public int splitArray(int[] arr, int k) {
        int n = arr.length;
        if(k>n) return -1;
        int sum = 0;
        
        for(int i = 0; i < n; i++){
            sum += arr[i];
        }
        
        int st = Arrays.stream(arr).max().getAsInt();
        int end = sum, ans=-1;
        
        while(st <= end){
            int mid = st + (end - st)/2;
            
            int students = 1, pages=0;
            
            for(int i = 0; i < n; i++){
                
                if(pages + arr[i] <= mid) pages+=arr[i];
                else{
                    students++;
                    pages = arr[i];
                }
            }if(students > k){
                st = mid + 1;
            }else{
                ans = mid;
                end = mid-1;
            }
        }
        return ans;
    }
}
