class Solution {
    public List<Integer> getRow(int n) {
        List<List<Integer>> res = new ArrayList<>();
        for(int i = 0; i<= n; i++){
            List<Integer> list = new ArrayList<>();
            
            for(int j = 0; j <= i; j++){
                if(j == 0 || j == i){
                    list.add(1);
                }
                else{
                    list.add(res.get(i-1).get(j-1) + res.get(i-1).get(j));
                }
            }
            res.add(list);
        }
        return res.get(res.size()-1);
    }
}
