class Solution {
    public boolean searchMatrix(int[][] mat, int x) {
        int m = mat.length, n = mat[0].length;
        int row = 0, col = n-1;
        
        while(row<m && col>=0){
            if(x == mat[row][col])return true;
            else if(x < mat[row][col])col--;
            else row++;
        }return false;
    }
}
