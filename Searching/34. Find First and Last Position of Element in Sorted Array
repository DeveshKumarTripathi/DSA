class Solution {
    public int[] searchRange(int[] arr, int target) {
        int[] result = new int[2];
        int first = firstIdx(arr, target);
        if(first == -1){
            result[0] = -1;
            result[1] = -1;
            return result;
        };
        int last = lastIdx(arr, target);
        result[0] = first;
        result[1] = last;
        return result;
        
    }
    int firstIdx(int[] arr, int target){
        int left = 0; 
        int right = arr.length-1;
        int ans = -1;
        
        while(left<=right){
            int mid = left + (right - left)/2;
            
            if(arr[mid] == target){
                ans=mid;
                right = mid-1;
            }else if(arr[mid] > target){
                right = mid-1;
            }else{
                left = mid+1;
            }
        }return ans;
    }
    
    int lastIdx(int[] arr, int target){
        int left = 0; 
        int right = arr.length-1;
        int ans = -1;
        
        while(left<=right){
            int mid = left + (right - left)/2;
            
            if(arr[mid] == target){
                ans=mid;
                left = mid+1;
            }else if(arr[mid] > target){
                right = mid-1;
            }else{
                left = mid+1;
            }
        }return ans;
    }
}
