class Solution {
    public int maxDistance(int[] arr, int k) {
        Arrays.sort(arr);
        int n = arr.length;
        int st = 1, end = arr[n-1] - arr[0] , ans = -1;
        
        while(st <= end){
            int mid = st + (end - st)/2;
            
            int count = 1, prevPos = arr[0];
            
            for(int i=0 ; i<n; i++){
                if(arr[i]-prevPos >= mid){
                    count++;
                    prevPos = arr[i];
                }
            }
            if(count >= k){
                ans = mid;
                st = mid+1;
            }else{
                end = mid-1;
            }
        }
        return ans;
    }
}
